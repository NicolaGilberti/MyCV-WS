<%= form_with(model: @curriculum, url: jobs_path, method: 'post', local: true) do |f| %>

    <div class="form-row">

    </div>

    <div class="form-row">
      <div class="col">
        <img src="<%= @curriculum.image %>" class="img-thumbnail w-25 p-3">
        <%= f.label :image, hidden: true %>
        <%= f.text_field :image, hidden: true %>
      </div>
      <div class="col">
        <%= f.label :name%>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="col">
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="form-row">
      <div class="col">
        <%= f.label :birthday%>
        <%= f.text_field :birthday, class: 'form-control' %>
      </div>
      <div class="col">
        <%= f.label :age_range %>
        <%= f.text_field :age_range, class: 'form-control' %>
      </div>
      <div class="col">
        <%= f.label :gender %>
        <%= f.text_field :gender, class: 'form-control' %>
      </div>
    </div>

    <div class="form-row">
      <div class="col">
        <%= f.label :location%>
        <%= f.text_field :location, class: 'form-control' %>
      </div>
      <div class="col">
        <%= f.label :hometown %>
        <%= f.text_field :hometown, class: 'form-control' %>
      </div>
      <div class="col">
        <%= f.label :language_spoken %>
        <%= f.text_field :language_spoken, class: 'form-control' %>
      </div>
    </div>

    <div class="form-row">
      <div class="col">
        <%= f.label :biography %>
        <%= f.text_area :biography, class: 'form-control' %>
      </div>
    </div>

    Education
    <div>
      <div class="form-row">
        <div class="col">
          <%= f.label :education_from%>
          <%= f.text_field :education_from, class: 'form-control' %>
        </div>
        <div class="col">
          <%= f.label :education_to %>
          <%= f.text_field :education_to, class: 'form-control' %>
        </div>
      </div>

      <div class="form-row">
        <div class="col">
          <%= f.label :education_title%>
          <%= f.text_field :education_title, class: 'form-control' %>
        </div>
        <div class="col">
          <%= f.label :education_org_name %>
          <%= f.text_field :education_org_name, class: 'form-control' %>
        </div>
      </div>
    </div>

    Working experiences
    <div>
      <div class="form-row">
        <div class="col">
          <%= f.label :work_from%>
          <%= f.text_field :work_from, class: 'form-control' %>
        </div>
        <div class="col">
          <%= f.label :work_to %>
          <%= f.text_field :work_to, class: 'form-control' %>
        </div>
      </div>

      <div class="form-row">
        <div class="col">
          <%= f.label :work_position%>
          <%= f.text_field :work_position, class: 'form-control' %>
        </div>
        <div class="col">
          <%= f.label :work_org_name %>
          <%= f.text_field :work_org_name, class: 'form-control' %>
        </div>
      </div>
    </div>

    Skills
    <div>
      <div class="form-row">
        <div class="col">
          <%= f.label :communication_skills%>
          <%= f.text_field :communication_skills, class: 'form-control' %>
        </div>
      </div>

      <div class="form-row">
        <div class="col">
          <%= f.label :organisational_skills %>
          <%= f.text_field :organisational_skills, class: 'form-control' %>
        </div>
      </div>

      <div class="form-row">
        <div class="col">
          <%= f.label :it_languages %>
          <%= f.text_field :it_languages, class: 'form-control' %>
        </div>
      </div>

      <div class="form-row">
        <div class="col">
          <%= f.label :other_skills %>
          <%= f.text_field :other_skills, class: 'form-control' %>
        </div>
      </div>

      <div class="form-row">
        <div class="col">
          <%= f.label :driving_licence %>
          <%= f.text_field :driving_licence, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div>
      <div class="form-row mt-1">
        <div class="col">
          <%= f.submit 'Go to Job offers', class: 'btn-primary col' %>
        </div>
      </div>
    </div>

<% end %>