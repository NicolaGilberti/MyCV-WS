<div class="card p-2">
  <div class="card-header">
    Jobs for you!
  </div>

  <div class="card-body">
    <h5 class="card-title">Here we show a List of Jobs from where to choose</h5>
    <p class="card-text">...</p>
    <div class="p-2">

      <h5>Github suggestions:</h5>
      <div id="accordion-github" class="mb-2" role="tablist" aria-multiselectable="true">

        <% @githubJobs.each_with_index do |job, index| %>

          <div class="card">
            <div class="card-header" role="tab" id="heading<%= index %>-stackogithubverflow">
              <h5 class="mb-0">
                <a data-toggle="collapse" data-parent="#accordion-github" 
                    href="#collapse<%= index %>-github" 
                    aria-expanded="true" aria-controls="collapse<%= index %>-github">
                  <%= job.title %>
                </a>
              </h5>
            </div>

            <div id="collapse<%= index %>-github" class="collapse in" role="tabpanel" 
                aria-labelledby="heading<%= index %>-github">
              <div class="card-block">
                <%= job.description %>
                <a href="<%= job.url %>" class="btn btn-primary">See original post</a>
              </div>
            </div>
          </div>

        <% end %>
        
      </div><!-- END Github accordion -->

      <h5>Stackoverflow suggestions:</h5>
      <div id="accordion-stackoverflow" class="mb-2" role="tablist" aria-multiselectable="true">

        <% @stackoverflowJobs[0..5].each_with_index do |job, index| %>

          <div class="card">
            <div class="card-header" role="tab" id="heading<%= index %>-stackoverflow">
              <h5 class="mb-0">
                <a data-toggle="collapse" data-parent="#accordion-stackoverflow" 
                    href="#collapse<%= index %>-stackoverflow" 
                    aria-expanded="true" aria-controls="collapse<%= index %>-stackoverflow">
                  <%= job.title %>
                </a>
              </h5>
            </div>

            <div id="collapse<%= index %>-stackoverflow" class="collapse in" role="tabpanel" 
                aria-labelledby="heading<%= index %>-stackoverflow">
              <div class="card-block">
                <%= job.description %>
                <a href="<%= job.url %>" class="btn btn-primary">See original post</a>
              </div>
            </div>
          </div>

        <% end %>
        
      </div><!-- END Stackoverflow accordion -->


    </div>
  </div>

</div>
